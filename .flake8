[flake8]
select = B,B9,BLK,C,E,F,I,W
exclude = */migrations
ignore = E203,W503
per-file-ignores =
    # Ignored rules: Imported but unused, unable to detect undefined names, defined from star imports
    komodo/settings/*.py: F401,F403,F405
    # Need to re-export module components in __init__ files
    **/__init__.py: F401
    # Need to load fixtures in conftest.py
    conftest.py: F401
    # I don't want to refactor functions that are definitely too long
    core/management/commands/heroku_data_migration.py: C901
    scripts/data_migration.py: C901
max-line-length = 120
max-complexity = 10
application-import-names = backend,komodo,api
import-order-style = google
